{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}"
  ],
  "coverageDirectory": "__coverage__",
  "coverageThreshold": {
    "global": {
      "branches": 79.75,
      "functions": 89.00,
      "lines": 91.75,
      "statements": 91.00
    }
  },
  "moduleNameMapper": {
    "\\.scss$": "identity-obj-proxy"
  },
  "testPathIgnorePatterns": [
    "__mocks__",
    "/node_modules/"
  ],
  "transformIgnorePatterns": [
    "/node_modules/(?!appirio-tech.*|topcoder|tc-)"
  ]
}
