{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}"
  ],
  "coverageDirectory": "__coverage__",
  "coverageThreshold": {
    "global": {
      "branches": 77.00,
      "functions": 88.50,
      "lines": 88.75,
      "statements": 87.50
    }
  },
  "moduleNameMapper": {
    "\\.(scss|css)$": "identity-obj-proxy"
  },
  "testPathIgnorePatterns": [
    "__mocks__",
    "/node_modules/"
  ],
  "transformIgnorePatterns": [
    "/node_modules/(?!appirio-tech.*|topcoder|tc-)"
  ]
}
